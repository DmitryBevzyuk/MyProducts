@model MyProducts.Models.PriceList
@{
    ViewBag.Title = "Редактирование данных прайс листа";
}
<div class="w-50 form-group">
    <form method="post">
        <div class="form-group">
            <label asp-for="ProductId" class="control-label">Код товара</label>
            <input asp-for="ProductId" class="form-control" />
            <span asp-validation-for="ProductId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ProviderId" class="control-label">Код поставщика</label>
            <input asp-for="ProviderId" class="form-control" />
            <span asp-validation-for="ProviderId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="StartPrice" class="control-label">Закупочная цена</label>
            <input asp-for="StartPrice" class="form-control" />
            <span asp-validation-for="StartPrice" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="EndPrice" class="control-label">Рыночная цена</label>
            <input asp-for="EndPrice" class="form-control" />
            <span asp-validation-for="EndPrice" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label">Описание</label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="ProductId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Сохранить" class="form-control" />
        </div>
    </form>
</div>