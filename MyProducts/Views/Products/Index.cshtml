@model IEnumerable<MyProducts.Models.Products>
@{
    ViewData["Title"] = "Список товаров";
}
<p>
    <a class="btn btn-primary btn-sm" href="../Products/Create">Добавить новый товар в список</a>
</p>

<table class="table table-striped">
    <thead>
        <tr scope="col">
            <th>Код</th>
            <th>Наименование</th>
            <th>Дата добавления</th>
            <th>Редактирование</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr scope="row">
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.AddDate</td>
            <td>
                <a asp-action="Edit" asp-controller="Products" asp-route-id="@item.Id">Изменить</a> |
                <a asp-action="Delete" asp-controller="Products" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>

        }
    </tbody>
</table>