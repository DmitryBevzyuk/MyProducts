@model MyProducts.Models.Products
@{
    ViewBag.Title = "Редактирование данных о товаре";
}
<div class="w-50 form-group">
    <form method="post">
        <div class="form-group">
            <label asp-for="Name" class="control-label">Название товара</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="AddDate" class="control-label">Дата добавления</label>
            <input asp-for="AddDate" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" value="Сохранить" class="form-control" />
        </div>
    </form>
</div>